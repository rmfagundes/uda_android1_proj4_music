<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mymusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivitySearch"
                  android:label="@string/activity_search" />
        <activity android:name=".ActivityPlaying"
                  android:label="@string/activity_now_playing" />
        <activity android:name=".ActivityStore"
                  android:label="@string/activity_store" />
        <activity android:name=".ActivityDetail"
                  android:label="@string/activity_details" />
    </application>

</manifest>